@model TRS.Web.ViewModels.EditClientViewModel

@{
    ViewBag.Title = "Düzənlə";
    Layout = "_Layout";
}

<div class="container mt-5">
    
    <h2>Müştəri (@Model.ClientName)</h2>

    <div class="mt-5">
        <form method="post" asp-action="Edit" asp-controller="Client" class="form-group">

            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row col-md-9">
                <label asp-for="ClientName" class="col-md-3"></label>
                <div class="col-md-6">
                    <input asp-for="ClientName" class="form-control" />
                    <span asp-validation-for="ClientName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row col-md-9">
                <label asp-for="Address" class="col-md-3"></label>
                <div class="col-md-6">
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>
            <hr />
            <div class="mt-2 ml-3">
                <a type="button" class="btn btn-outline-warning" asp-action="List" asp-controller="Client">Müştərilər</a>
                <button type="submit" class="btn btn-outline-success ml-3">Saxla</button>
            </div>
        </form>
    </div>
</div>