@model TRS.Web.ViewModels.ClientTaskType.EditClientTaskTypeViewModel

@{
    ViewBag.Title = "Düzənlə";
    Layout = "_Layout";
}

<div class="container">
    <form method="post" asp-action="EditTaskType" asp-controller="ClientTask" class="form-group">

        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row col-md-9">
            <label asp-for="TypeName" class="col-md-3"></label>
            <div class="col-md-6">
                <input asp-for="TypeName" class="form-control" />
                <span asp-validation-for="TypeName" class="text-danger"></span>
            </div>
        </div>

        <hr />
        <div class="mt-2 ml-3">
            <button type="submit" class="btn btn-outline-success">Saxla</button>
            <a type="button" class="btn btn-outline-warning ml-3" asp-action="ClientTaskTypeList" asp-controller="ClientTask">Tapşırıq tipləri</a>
        </div>
    </form>
</div>
