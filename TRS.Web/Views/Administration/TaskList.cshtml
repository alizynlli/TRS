                "filter": true,
                "ajax": {
                    "url": "/Administration/LoadTasks",
                    "type": "POST",
                    "data": function (data) {
                        var firstDate = $('#firstDate').val();

                        data.taskStatus = 0;
                        data.firstDate = firstDate;
                    },
                    "datatype": "json"
                },
                "columnDefs": [
                    {
